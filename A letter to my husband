  <script>
    // ====== PERSONALIZE THESE ======
    const HIS_NAME = "My forever valantine"; // e.g. "Mike"
    const YOUTUBE_VIDEO_ID = "ia5X9DFyGdU"; // e.g. "dQw4w9WgXcQ"

    // Put your background photos here (free):
    // Option A: If you host them in a folder named "photos", use:
    // "photos/1.jpg", "photos/2.jpg", ...
    // Option B: If you're using a host that gives you image links, paste full links.
    const BACKGROUND_IMAGES = [
      "photos/1.jpg",
      "photos/2.jpg",
      "photos/3.jpg",
      "photos/4.jpg"
    ];
    // ===============================

    // Date
    document.getElementById("today").textContent =
      new Date().toLocaleDateString(undefined, { year:"numeric", month:"long", day:"numeric" });

    // Name
    document.getElementById("hisName").textContent =
      (HIS_NAME === "My forever valentine") ? "üíù" : My forever valentine;

    // Floating hearts
    const hearts = document.querySelector(".hearts");
    const colors = ["#fb7185","#f472b6","#a78bfa","#60a5fa","#fda4af"];
    function makeHeart(){
      const h = document.createElement("div");
      h.className = "heart";
      h.style.left = Math.random()*100 + "vw";
      h.style.color = colors[Math.floor(Math.random()*colors.length)];
      const size = 10 + Math.random()*14;
      h.style.width = size + "px";
      h.style.height = size + "px";
      h.style.opacity = (0.15 + Math.random()*0.35).toFixed(2);
      const dur = 10 + Math.random()*18;
      h.style.animationDuration = dur + "s";
      h.style.animationDelay = (-Math.random()*dur) + "s";
      hearts.appendChild(h);
      setTimeout(()=>h.remove(), dur*1000);
    }
    for(let i=0;i<26;i++) makeHeart();
    setInterval(makeHeart, 950);

    // Background slideshow
    const bg = document.getElementById("bg");
    let bgIndex = 0;

    function setBg(i){
      const url = BACKGROUND_IMAGES[i % BACKGROUND_IMAGES.length];
      bg.style.backgroundImage = `url('${url}')`;
    }
    setBg(bgIndex);

    if (BACKGROUND_IMAGES.length > 1){
      setInterval(() => {
        bgIndex = (bgIndex + 1) % BACKGROUND_IMAGES.length;
        setBg(bgIndex);
      }, 4500);
    }

    // Buttons logic
    const stage = document.getElementById("stage");
    const yesArea = document.getElementById("yesArea");
    const noArea  = document.getElementById("noArea");
    const letter  = document.getElementById("letter");

    document.getElementById("yesBtn").addEventListener("click", () => {
      stage.style.display = "grid";
      yesArea.style.display = "block";
      noArea.classList.remove("show");
      letter.classList.remove("show");
    });

    document.getElementById("noBtn").addEventListener("click", () => {
      stage.style.display = "grid";
      yesArea.style.display = "none";
      noArea.classList.add("show");
      letter.classList.remove("show");
    });

    document.getElementById("openBtn").addEventListener("click", () => {
      letter.classList.add("show");
      letter.scrollIntoView({ behavior: "smooth", block: "start" });
    });

    document.getElementById("closeBtn").addEventListener("click", () => {
      letter.classList.remove("show");
    });

    // Music modal
    const modal = document.getElementById("musicModal");
    const yt = document.getElementById("ytFrame");

    document.getElementById("musicBtn").addEventListener("click", () => {
      if (YOUTUBE_VIDEO_ID === "PUT_YOUTUBE_ID_HERE"){
        alert("Replace PUT_YOUTUBE_ID_HERE with the real YouTube video ID in the code.");
        return;
      }
      yt.src = `https://www.youtube.com/embed/${YOUTUBE_VIDEO_ID}?autoplay=1&rel=0`;
      modal.showModal();
    });

    document.getElementById("closeMusic").addEventListener("click", () => {
      modal.close();
      yt.src = "";
    });

    modal.addEventListener("click", (e) => {
      const r = modal.getBoundingClientRect();
      const inside = r.top <= e.clientY && e.clientY <= r.bottom && r.left <= e.clientX && e.clientX <= r.right;
      if (!inside) { modal.close(); yt.src = ""; }
    });
  </script>
